<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_bigger"
        android:paddingRight="@dimen/padding_bigger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_screen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textStyle="bold"
            android:textSize="@dimen/input_text_size"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor"
            android:cursorVisible="true"
            android:gravity="end|center"
            android:textAlignment="textEnd"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:maxLines="3"
            android:background="@android:color/transparent"
            android:text=""
            android:hint="@string/enter_expression"
            android:autofillHints="0"
            tools:text="@string/enter_expression"
            />

        <TextView
            android:id="@+id/output_screen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_big"
            android:gravity="end|center"
            android:textSize="@dimen/output_text_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:maxLines="2"
            android:scrollbars="vertical"
            android:text="@string/user_output_placeholder"
            tools:text="@string/user_output_placeholder"
            />
    </LinearLayout>

</layout>

